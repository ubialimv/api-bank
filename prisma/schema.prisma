// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Pessoas {
  idPessoa        Int       @default(autoincrement()) @id
  nome            String
  cpf             String
  dataNascimento  DateTime
  contas          Contas[]
}

model Contas {
  idConta           Int       @default(autoincrement()) @id
  pessoa            Pessoas   @relation(fields: [idPessoa], references: [idPessoa])
  idPessoa          Int       
  saldo             Decimal
  limiteSaqueDiario Decimal
  flagAtivo         Boolean
  tipoConta         Int
  dataCriacao       DateTime
  transacoes        Transacoes[]
}

model Transacoes {
  idTransacao   Int       @default(autoincrement()) @id
  conta         Contas    @relation(fields: [idConta], references: [idConta])
  idConta       Int
  valor         Decimal
  dataTransacao DateTime
}